@import url('https://fonts.googleapis.com/css2?family=Raleway&display=swap');
.wrapper {
  background: rgb(11,35,238);
  background: linear-gradient(70deg, rgba(11,35,238,1) 0%, rgba(246,52,12,1) 100%);
  color: white;
  font-family: 'Raleway';

  display: flex;
  padding: 4vh 3vw 4vh 3vw;
  align-items: stretch;
  justify-content: space-between;
  gap: 10vh;

  border-collapse: collapse;
}

main {
  flex: 2.45;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.metric {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
  gap: 2vh;
}

.metric h1 {
  font-size: 9vh;
  font-weight: bold;
  margin: 0;
}

.metric-data {
  display: inline-block;
  background-color: #fff;
  color: #333;
  padding: 1vh 3vh 1vh 3vh;
  border-radius: 1vh;
  font-weight: bold;
  font-size: 9vh;
}

.challenge-progress {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 70%;
  gap: 2vh;
}

.caption {
  font-size: 9vh;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.progress {
  background-color: white;
  border-radius: 1vh;
  height: 100%;
  display: flex;
  align-items: flex-end;
  padding: 0.3vw;
  flex-wrap: wrap;
}

.daily-activity-slot {
  display: inline-block;
  width: 10%;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.daily-activity {
  border-radius: 4vh;
  width: 90%;
  height: 90%;
}

.completed {
  background-color: #2e7d32;
}

.missed {
  background-color: #c62828;
}
